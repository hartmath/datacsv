{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/webhooks/leads/facebook/([^/]+)",
      "dest": "/api/webhooks/facebook-webhook.js"
    },
    {
      "src": "/api/webhooks/leads/google/([^/]+)",
      "dest": "/api/webhooks/google-webhook.js"
    },
    {
      "src": "/api/webhooks/leads/linkedin/([^/]+)",
      "dest": "/api/webhooks/linkedin-webhook.js"
    },
    {
      "src": "/api/webhooks/leads/custom/([^/]+)",
      "dest": "/api/webhooks/custom-webhook.js"
    },
    {
      "src": "/api/auto-recharge",
      "dest": "/api/auto-recharge.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_SUPABASE_URL": "@vite_supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@vite_supabase_anon_key",
    "VITE_STRIPE_PUBLISHABLE_KEY": "@vite_stripe_publishable_key",
    "VITE_FACEBOOK_APP_ID": "@vite_facebook_app_id"
  },
  "functions": {
    "api/webhooks/*.js": {
      "maxDuration": 30
    },
    "api/auto-recharge.js": {
      "maxDuration": 30
    }
  }
}
