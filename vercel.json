{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/webhooks/leads/facebook/(.*)",
      "destination": "/api/webhooks/facebook-webhook.js"
    },
    {
      "source": "/api/webhooks/leads/google/(.*)",
      "destination": "/api/webhooks/google-webhook.js"
    },
    {
      "source": "/api/webhooks/leads/linkedin/(.*)",
      "destination": "/api/webhooks/linkedin-webhook.js"
    },
    {
      "source": "/api/webhooks/leads/custom/(.*)",
      "destination": "/api/webhooks/custom-webhook.js"
    },
    {
      "source": "/api/auto-recharge",
      "destination": "/api/auto-recharge.js"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/webhooks/*.js": {
      "maxDuration": 30
    },
    "api/auto-recharge.js": {
      "maxDuration": 30
    }
  }
}
